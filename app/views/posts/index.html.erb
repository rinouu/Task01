<%= render 'header' %>
<h1>My Tweets</h1>
<% if flash[:notice] %>
  <div id="flash"><%= notice %></div>
<% end %>

<br>
<% @posts.each do |post| %>
  <table>
    
    <div class="table">
      <tr>
        <th colspan="4">
          <span><%= image_tag("user_icon.jpg", style: "height:30px;width:30px;") %></span>
          <span>Posted by you at <%= post.updated_at %></span>
          <hr>
        </th>
      </tr>
    
      <tr>
        <td>
          <p class="content"><%= post.content %></p>
          <div class="btn_block">
            <div class="show"><%= link_to 'Show more!', post_path(post.id), class: "link" %></div>
            <div class="edit"><%= link_to "Edit", edit_post_path(post.id), data: { confirm: 'Are you sure you want to edit this?' }, class: "link" %></div>
            <div class="delete"><%= link_to 'Delete', post_path(post.id), method: :delete ,data: { confirm: 'Are you sure you want to delete this?'}, class: "link" %></div>
          </div>
        </td>
      </tr>
    </div>
  </table>
  <br>
<% end %>

<%= render 'footer' %>
